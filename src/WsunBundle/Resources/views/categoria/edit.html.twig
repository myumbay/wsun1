{% extends 'WsunBundle:Default:index.html.twig'%}

{% block bloque1 %}

    <div class="box">
        <div class="panel-body">
            <div class="panel2">
                <div class="panel-heading">
                    <h3> <strong><span>Edicion</span> Categoria</strong></h3>
                </div>
                {{ form_start(edit_form) }}
                <div class="row">
                    <div class="col-xs-4 col-sm-3 col-lg-5 text-left">{{ form_label(edit_form.nombreCat)}} </div>
                    <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{ form_widget(edit_form.nombreCat) }}</div>
                </div>
                <div class="row">
                    <div class="col-xs-4 col-sm-3 col-lg-5 text-left">{{ form_label(edit_form.estado)}}  </div>
                    <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{form_widget(edit_form.estado, {'attr': {'onclick': 'return ActivarPadre()'} } )}}
                    <span class="help-block">En caso de ser Categoria Principal no check.</span></div>
                </div>
                <div class="row">

                    <div class="col-xs-4 col-sm-3 col-lg-5 text-left">Principal  </div>
                    <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{form_widget(edit_form.padre)}}</div>
                </div>
                <div class="row">
                    <input type="submit" value="Edit" />
                </div>
                {{ form_end(edit_form) }}
            </div>
            <div class="row">

                {{ form_start(delete_form) }}
                <button type="submit" ><i class="fa fa-camera-retro fa-lg" aria-hidden="true"></i> Delete</button>
                {{ form_end(delete_form) }}
            </div>
            <a href="{{ path('admin_categoria_index') }}">Atras</a>
        </div> </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(window).ready(function() {
            ActivarPadre();
        });
        ActivarPadre=function () {
            var condiciones = $("#wsunbundle_categoria_estado").is(":checked");
            if (!condiciones) {
                $('#wsunbundle_categoria_padre').val(null);
                $('#wsunbundle_categoria_padre').prop('disabled', 'disabled');
            }else {
                $('#wsunbundle_categoria_padre').removeAttr("disabled");
            }
        }
    </script>
{% endblock %}

