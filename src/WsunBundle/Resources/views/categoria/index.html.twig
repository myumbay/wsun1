{% extends 'WsunBundle:Default:index.html.twig'%}

{% block bloque1 %}
<div class="box">
    <div class="panel panel-azul">
        <fieldset>
            <legend class="text-center header">LISTA DE CATEGORIAS</legend>
             <div class="count">
                <span class="label label-primary">
                Total: {{ pagination.getTotalItemCount }}
                </span>
            </div><br/>
        <table class="table table-bordered">
        <tr>
            {# sorting of properties based on query components #}
            <th>{{ knp_pagination_sortable(pagination, 'NÂ°', '') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'NOMBRE CATEGORIA', '') }}</th>
           {# <th{% if pagination.isSorted('e.nombreProducto') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'NOMBRE PRODUCTO', 'e.nombreProducto') }}</th>#}
            <th>{{ knp_pagination_sortable(pagination, 'TIPO', '') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'ACCIONES', '') }}</th>
        </tr> 
        {% set contador= 1%}
        {% for categorium in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ contador }}</td>
                <td><a href="{{ path('admin_categoria_show', { 'id': categorium.id }) }}">{{ categorium.nombreCat }}</a></td>
                <td>{% if(categorium.estado=='1')%}
                    Sub-Categoria
                        {% else %}
                        Categoria Principal
                    {% endif %}
                   </td>
                <td>
                    <div class="row">
                        <div class="col-md-3">
                         <a href= "{{ path('admin_categoria_show', { 'id': categorium.id }) }}" class="btn btn-primary btn-sm">show</a>
                        </div>
                         <div class="col-md-2">
                         <a href= "{{ path('admin_categoria_edit', { 'id': categorium.id }) }}" class="btn btn-primary btn-sm">edit</a>
                        </div>
                    </div>
                </td>
           </tr>
            {% set contador= contador+1%}
        {% endfor %}
    </table>
<a href="{{ path('admin_categoria_new') }}"> <span class="glyphicon glyphicon-file"> Nuevo</span></a>
                    </div></div>    
{% endblock %}
