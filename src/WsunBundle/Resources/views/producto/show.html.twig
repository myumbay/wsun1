    <div class="row">
        <div class="col-xs-4 col-sm-3 col-lg-4 text-left">CÃ³digo Producto:: </div>
        <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{ producto.codigoProducto  }}</div>
