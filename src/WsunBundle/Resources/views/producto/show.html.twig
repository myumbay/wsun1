        <div class="col-md-2"> <a href="{{ path('admin_producto_edit', { 'id': producto.id }) }}" class="btn btn-primary btn-sm">Editar</a></div>
        <div class="col-md-2">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-primary btn-sm">
            {{ form_end(delete_form) }}
        </div>
