          <div class="col-md-2"></div>
          <div class="col-md-4 "><b>Observaciones</b></div>
          <div class="col-md-4">{{ producto.observacion }}</div>
          <div class="col-md-2"></div>
        </div>
        <div class="row text-justify">
          <div class="col-md-2"></div>
