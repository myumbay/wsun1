     <div class="row">
        <div class="col-xs-4 col-sm-3 col-lg-4 text-left">Nombre producto: </div>
        <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{ producto.nombreProducto  }}</div>
    </div>       
    
     <div class="row">
        <div class="col-xs-4 col-sm-3 col-lg-4 text-left">Nombre producto: </div>
        <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{ producto.nombreProducto  }}</div>
    </div> 
    <div class="row">
        <div class="col-xs-4 col-sm-3 col-lg-4 text-left">Imagen: </div>
