    <div class="row">
        <div class="col-xs-4 col-sm-3 col-lg-4 text-left">Precio: </div>
        <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{ producto.precioProducto }}</div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-sm-3 col-lg-4 text-left">Observaciones: </div>
        <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{ producto.observacion }}</div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-sm-3 col-lg-4 text-left">Estado: </div>
        <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{ producto.estado }}</div>
    </div>                
    <div class="row">
        <div class="col-xs-4 col-sm-3 col-lg-5 text-left">Categoria: </div>
        <div class="col-xs-5 col-sm-6 col-lg-4 text-left">{{ producto.categoria }}</div>
    </div>  
    <div class="row">
        <div class="col-xs-4 col-sm-3 col-lg-5 text-left">Graba Iva: </div>
        <div class="col-xs-5 col-sm-6 col-lg-4 text-left">
            {%if (producto.iva==true)%}
                {{iva}}%
                {%else%}
                    0%
            {% endif %}
            </div>
    </div> 
    <br>
     <div class="row">
        <div class="col-md-2"> <a href="{{ path('admin_producto_index') }}" class="btn btn-primary btn-sm">Atras</a></div>
         {% if is_granted('ROLE_ADMIN')%}
        <div class="col-md-2"> <a href="{{ path('admin_producto_edit', { 'id': producto.id }) }}" class="btn btn-primary btn-sm">Editar</a></div>
        <div class="col-md-2">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-primary btn-sm">
            {{ form_end(delete_form) }}
        </div>
         {% endif %}
    </div>
    </fieldset>
    </div>
</div>
       

