<div class="box">
                <h4> <strong><span>Nueva empresa</strong></h4>
            
        {{ form_start(form,{'class':"form-horizontal",'method':"POST"}) }}  
     
    <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.ruc)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.ruc,{'attr':{'class':'form-control','placeholder':'Ruc'} }) }}
    </div>  
    <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.nombreEmp)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.nombreEmp,{'attr':{'class':'form-control','placeholder':'Ingrese el nombre de la empresa'} }) }}
