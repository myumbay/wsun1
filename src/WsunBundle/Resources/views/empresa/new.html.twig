    <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.email)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'E-mail'} }) }}
    </div>
     <div class="form-group col-lg-6">
        <div class="input-group-addon">{{ form_label(form.ordenCompra)}}<span class="text-danger">*</span></div>
        {{ form_widget(form.ordenCompra,{'attr':{'class':'form-control','placeholder':'Codigo de Orden'} }) }}
