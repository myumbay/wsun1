{% extends 'WsunBundle:Default:index.html.twig'%}
{% block bloque1 %}
<div class="box">
    <div class="panel panel-azul">
    <fieldest>
    <legend class="text-center header">Datos de la Empresa</legend>
        <div class="container-fluid">
        <div class="row   text-justify">
          <div class="col-sm-2"></div>
          <label class="col-sm-4 control-label">Ruc:</label>
          <div class="col-sm-4 right" >{{ empresa.ruc }}</div>
          <div class="col-sm-2"></div>
        </div>  
        <div class="row text-justify">
          <div class="col-md-2"></div>
          <label class="col-sm-4 control-label">Nombre Empresa:</label>
          <div class="col-md-4 right" >{{ empresa.nombreEmp }}</div>
          <div class="col-md-2"></div>
        </div>
        <div class="row text-justify">
          <div class="col-md-2"></div>
          <label class="col-sm-4 control-label">Teléfono:</label>
          <div class="col-md-4 right" >{{ empresa.telefonoEmp }}</div>
          <div class="col-md-2"></div>
        </div>
        <div class="row text-justify">
          <div class="col-md-2"></div>
          <label class="col-sm-4 control-label">Dirección:</label>
          <div class="col-md-4 right" >{{ empresa.direccionEmp }}</div>
          <div class="col-md-2"></div>
        </div>
        <div class="row text-justify">
          <div class="col-md-2"></div>
          <label class="col-sm-4 control-label">Correo de Empresa:</label>
          <div class="col-md-4 right" >{{ empresa.email }}</div>
          <div class="col-md-2"></div>
        </div>  
        <div class="row text-justify">
          <div class="col-md-2"></div>
          <label class="col-sm-4 control-label">Orden Compra:</label>
          <div class="col-md-4 right" >{{ empresa.ordenCompra }}</div>
          <div class="col-md-2"></div>
        </div>
        <div class="row text-justify">
          <div class="col-md-2"></div>
          <label class="col-sm-4 control-label">Crédito:</label>
          <div class="col-md-4 right" >{% if empresa.credito %}Yes{% else %}No{% endif %}</div>
          <div class="col-md-2"></div>
        </div>
        <div class="row text-justify">
          <div class="col-md-2"></div>
          <label class="col-sm-4 control-label">Límite de Orden:</label>
          <div class="col-md-4 right" >{{ empresa.limiteOrden }}</div>
          <div class="col-md-2"></div>
        </div>   
    
     <br>
        <div class="row">
        <div class="col-md-4"><a href="{{ path('empresa_index') }}" class="icon-backward btn btn-primary btn-sm">Back</a></div>
        <div class="col-md-4"><a href="{{ path('empresa_edit', { 'id': empresa.id }) }}" class="btn btn-primary btn-sm">Edit</a></div>
        <div class="col-md-4">
               {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-primary btn-sm">
            {{ form_end(delete_form) }}
          </div>
        </div> 
         </div>
        </fieldest>
    
      </div> </div>      
           
{% endblock %}
