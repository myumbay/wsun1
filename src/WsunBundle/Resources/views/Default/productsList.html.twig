                <div class="col-sm-3">
                     {% if(acat==producto.categoria.padreId)%}
                 
                             <div class="crsl-wrap"><img width="80" height="80" src="{{ asset('../Documentos/Productos/' ~  producto.id ~ '.' ~producto.imagen ) }}"/>
